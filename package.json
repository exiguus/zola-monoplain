{
  "name": "zola-monoplain",
  "version": "1.3.1",
  "description": "mono/plain; a11y=true; An accessible, monospace plain Zola Theme",
  "scripts": {
    "dev": "turbo run dev --parallel --cache=local:r,remote:r",
    "test": "turbo run test --parallel",
    "test:setup": "pnpx puppeteer browsers install chrome",
    "test:environment": "pnpx pa11y --environment",
    "check": "pnpm check:fta && turbo run check --parallel",
    "check:fta": "fta --config-path ./fta.config.json .",
    "build": "turbo run check build test",
    "format": "pnpm format:fix",
    "format:fix": "dprint fmt --allow-no-files",
    "format:check": "dprint check",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major",
    "prepare": "pnpm husky"
  },
  "keywords": [
    "zola",
    "theme",
    "monospace",
    "monoplain",
    "plain",
    "accessible",
    "a11y"
  ],
  "author": {
    "name": "Simon Gattner",
    "url": "https://www.gattner.name/",
    "mastodon": "https://toot.community/@exiguus"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/exiguus/zola-monoplain.git"
  },
  "homepage": "https://github.com/exiguus/zola-monoplain#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@commitlint/prompt-cli": "^20.4.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "dprint": "^0.50.2",
    "fta-cli": "^2.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "pa11y": "^9.1.0",
    "puppeteer": "^24.37.5",
    "standard-version": "^9.5.0",
    "turbo": "^2.8.10"
  },
  "lint-staged": {
    "*.@(ts|tsx|js|jsx|mjs|cjs)": [
      "pnpm format:fix"
    ],
    "*.@(md|mdx|html|json|toml|yml|yaml)": [
      "pnpm format:fix"
    ]
  },
  "packageManager": "pnpm@10.30.1",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": ">=18.0.0 <19.0.0",
        "react-dom": ">=18.0.0 <19.0.0",
        "react-refresh": ">=0.8.3 <1.0.0",
        "typescript": ">=5 <6"
      }
    },
    "onlyBuiltDependencies": [
      "dprint",
      "puppeteer"
    ],
    "overrides": {
      "minimatch@<10.2.1": ">=10.2.1"
    }
  },
  "engines": {
    "pnpm": ">=10.0.0 <12.0.0",
    "npm": ">=10.0.0 <13.0.0",
    "node": ">=22.0.0 <25.0.0"
  }
}
